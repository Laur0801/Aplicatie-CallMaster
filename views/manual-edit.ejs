<!DOCTYPE html>
<html lang="en" class="">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>

    <div id="app">

        <%- include('partials/nav.ejs') %>
            <%- include('partials/aside.ejs') %>

                <section class="is-title-bar">
                    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
                        <ul>
                            <li>
                                <%= parent %>
                            </li>
                            <li>
                                <%= title %>
                            </li>
                        </ul>
                    </div>
                </section>

                <section class="section main-section">
                    <div class="card mb-6">
                        <header class="card-header">
                            <p class="card-header-title">
                                <span class="icon"><i class="mdi mdi-file"></i></span>
                                sip.conf
                            </p>
                        </header>
                        <div class="card-content">
                            <form method="get" id="manual-edit-sip-conf" data-type="sipConf">
                                <div class="field">
                                    <div class="field-body">
                                        <div class="field">
                                            <div id="sipQuill">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="field grouped">
                                    <div class="control">
                                        <button type="submit" class="button green">
                                            Salvați
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>

                <section class="section main-section">
                    <div class="card mb-6">
                        <header class="card-header">
                            <p class="card-header-title">
                                <span class="icon"><i class="mdi mdi-file"></i></span>
                                extensions.conf
                            </p>
                        </header>
                        <div class="card-content">
                            <form method="get" id="manual-edit-exten-conf" data-type="extConf">

                                <div class="field">
                                    <div class="field-body">
                                        <div class="field">
                                            <div id="extenQuill">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="field grouped">
                                    <div class="control">
                                        <button type="submit" class="button green">
                                            Salvați
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
    </div>
    <%- include('partials/footer.ejs') %>
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <script src="/js/manual-edit.js"></script>
</body>

</html>