<!DOCTYPE html>
<html lang="en" class="">

<head>
  <%- include('partials/head.ejs') %>
</head>

<body>

  <div id="app">

    <%- include('partials/nav.ejs') %>
      <%- include('partials/aside.ejs') %>

      <section class="is-title-bar">
        <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
          <ul>
            <li><%= parent %></li>
            <li><%= title %></li>
          </ul>
        </div>
      </section>

      <section class="section main-section">
        <div class="grid gap-6 grid-cols-1 md:grid-cols-3 mb-6">
          <div class="card">
            <div class="card-content">
              <div class="flex items-center justify-between">
                <div class="widget-label">
                  <h3>
                    Extensions
                  </h3>
                  <h1>
                    <%= extensionsCount %>
                  </h1>
                </div>
                <span class="icon widget-icon text-green-500"><i class="mdi mdi-account-multiple mdi-48px"></i></span>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="card-content">
              <div class="flex items-center justify-between">
                <div class="widget-label">
                  <h3>
                    Trunks
                  </h3>
                  <h1>
                   <%= trunksCount %>
                  </h1>
                </div>
                <span class="icon widget-icon text-blue-500"><i class="mdi mdi-phone mdi-48px"></i></span>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-content">
              <div class="flex items-center justify-between">
                <div class="widget-label">
                  <h3>
                    <div class="mt-4">
                      <% if(uptimeStats != 0) { %>
                        <a class="bold">Uptime: <%= uptimeStats.uptime %></a> <br>
                        <a class="pt-2">Last Reload: <%= uptimeStats.lastReload %></a>
                      <% } else { %>
                        <a class="bold">Asterisk Stopped</a>
                      <% } %>
                    </div>
                  </h3>
                </div>
                <span class="icon widget-icon text-red-500"><i class="mdi mdi-timelapse mdi-48px"></i></span>
              </div>
            </div>
          </div>
        </div>

        <div class="card mb-6" id="chartSec">
          <header class="card-header">
            <p class="card-header-title">
              <span class="icon"><i class="mdi mdi-finance"></i></span>
              Performance
            </p>
            <a href="#" class="card-header-icon">
              <span class="icon"><i class="mdi mdi-reload"></i></span>
            </a>
          </header>
          <div class="card-content">
            <div class="chart-area">
              <div class="h-full">
                <div class="chartjs-size-monitor">
                  <div class="chartjs-size-monitor-expand">
                    <div></div>
                  </div>
                  <div class="chartjs-size-monitor-shrink">
                    <div></div>
                  </div>
                </div>
                <canvas id="big-line-chart" width="2992" height="1000" class="chartjs-render-monitor block"
                  style="height: 400px; width: 1197px;"></canvas>
              </div>
            </div>
          </div>
        </div>

        <div class="card has-table">
          <header class="card-header">
            <p class="card-header-title">
              <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
              Extensions
            </p>
            <a href="#" class="card-header-icon">
              <span class="icon"><i class="mdi mdi-reload"></i></span>
            </a>
          </header>
          <div class="card-content">
            <table id="dashExtTable">
              <thead>
                <tr>
                  <th></th>
                  <th>Name</th>
                  <th>Extension</th>
                  <th>Created</th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="dashExtList">
              </tbody>
            </table>
          </div>
        </div>
      </section>
  </div>

  <%- include('partials/footer.ejs') %>
  <script type="text/javascript" src="/js/chart.js"></script>
  <script src="/js/dashboard.js"></script>
</body>
</html>