<!DOCTYPE html>
<html lang="en" class="">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>

    <div id="app">

        <%- include('partials/nav.ejs') %>
            <%- include('partials/aside.ejs') %>

                <section class="is-title-bar">
                    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
                        <ul>
                            <li>
                                <%= parent %>
                            </li>
                            <li>
                                <%= title %>
                            </li>
                        </ul>
                    </div>
                </section>

                <section class="section main-section">
                    <div class="card mb-6">
                        <header class="card-header">
                            <p class="card-header-title">
                                <span class="icon"><i class="mdi mdi-settings"></i></span>
                                Edit advanced settings of Asterisk
                            </p>
                        </header>
                        <div class="card-content">
                            <form method="get" id="sip-settings-form" data-type="cliCommand">
                                <div class="field">
                                    <div class="field-body">
                                      <div class="field">
                                        <label class="label">Bind Address <a class="required-field">*</a></label>
                                        <div class="control icons-left">
                                          <input class="input" type="text" placeholder="" id="bindAddr" value="<%= settings.bindAddress %>">
                                          <span class="icon left"><i class="mdi mdi-lan-connect"></i></span>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="field">
                                    <div class="field-body">
                                      <div class="field">
                                        <label class="label">Bind Port <a class="required-field">*</a></label>
                                        <div class="control icons-left">
                                          <input class="input" type="text" placeholder="" id="bindPort" value="<%= settings.bindPort %>">
                                          <span class="icon left"><i class="mdi mdi-serial-port"></i></span>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="field grouped">
                                    <div class="control">
                                      <button type="submit" class="button red">
                                        Change Settings
                                      </button>
                                    </div>
                                  </div>
                            </form>
                        </div>
                    </div>
                </section>
    </div>
    <%- include('partials/footer.ejs') %>
        <script src="/js/common.js"></script>
        <script src="/js/advanced-sip.js"></script>
</body>
</html>