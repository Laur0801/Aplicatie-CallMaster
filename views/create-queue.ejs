<!DOCTYPE html>
<html lang="en" class="">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>

<div id="app">

    <%- include('partials/nav.ejs') %>
    <%- include('partials/aside.ejs') %>

    <section class="is-title-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <ul>
        <li><%= parent %></li>
        <li><%= title %></li>
        </ul>
    </div>
    </section>

  <section class="section main-section">
    <div class="card mb-6">
      <header class="card-header">
        <p class="card-header-title">
          <span class="icon"><i class="mdi mdi-account-settings"></i></span>
          Crează o nouă gestionare apel
        </p>
      </header>
      <div class="card-content">
        <form method="get" id="create-queue-form">
          <div class="field">
            <label class="label">Nume Apel <a class="required-field">*</a></label>
            <div class="field-body">
              <div class="field">
                <div class="control icons-left">
                  <input class="input" type="text" placeholder="Nume" id="name">
                  <span class="icon left"><i class="mdi mdi-account-settings"></i></span>
                </div>
              </div>
            </div>
          </div>

          <div class="field">
            <label class="label">Strategie <a class="required-field">*</a></label>
            <div class="field-body">
              <div class="field grouped multiline">
                <div class="control">
                  <label class="radio" id="strat-radio-0">
                    <input type="radio" name="strat-radio" value="ringall">
                    <span class="check"></span>
                    <span class="control-label">Toate</span>
                  </label>
                </div>
                <div class="control">
                  <label class="radio" id="strat-radio-1">
                    <input type="radio" name="strat-radio" value="leastrecent">
                    <span class="check"></span>
                    <span class="control-label">Ultimele</span>
                  </label>
                </div>
                <div class="control">
                  <label class="radio" id="strat-radio-2">
                    <input type="radio" name="strat-radio" value="random">
                    <span class="check"></span>
                    <span class="control-label">Aleatoriu</span>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="field-body">
              <div class="field">
                <label class="label">Timp de așteptare (secunde) <a class="required-field">*</a></label>
                <div class="control icons-left">
                  <input class="input" type="text" placeholder="15" id="timeout" value="15">
                  <span class="icon left"><i class="mdi mdi-clock"></i></span>
                </div>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="field-body">
              <label class="label">Auto-pauză pentru operator<a class="required-field">*</a></label>
              <div class="field grouped multiline">
                <div class="control">
                  <label class="radio" id="auto-pause-radio-0">
                    <input type="radio" name="autopause-radio" value="yes">
                    <span class="check"></span>
                    <span class="control-label">Da</span>
                  </label>
                </div>
                <div class="control">
                  <label class="radio" id="auto-pause-radio-1">
                    <input type="radio" name="autopause-radio" value="no">
                    <span class="check"></span>
                    <span class="control-label">Nu</span>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <hr>

          <div class="field grouped">
            <div class="control">
              <button type="submit" class="button green">
                Trimite
              </button>
            </div>
            <div class="control">
              <button type="reset" class="button red">
                Resetează
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>
<%- include('partials/footer.ejs') %>
<script src="/js/create-queue.js"></script>
</body>
</html>
