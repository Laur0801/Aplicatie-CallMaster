<!DOCTYPE html>
<html lang="en" class="form-screen">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <div id="app">
        <section class="section main-section">
            <div class="card">
                <header class="card-header">
                    <p class="card-header-title">
                        <span class="icon"><img src="/favicon/favicon-16x16.png"></span>
                        Login <a class="required-field">&nbsp;CallMaster</a>
                    </p>
                </header>
                <div class="card-content">
                    <form action="/auth/login" method="POST">
                        <div class="field spaced">
                            <label class="label">Utilizator</label>
                            <div class="control icons-left">
                                <input class="input" type="text" name="utilizator" placeholder="Username"
                                    autocomplete="username">
                                <span class="icon is-small left"><i class="mdi mdi-account"></i></span>
                            </div>
                            <p class="help">
                                Te rog introdu utilizator
                            </p>
                        </div>
                        <div class="field spaced">
                            <label class="label">Parola</label>
                            <p class="control icons-left">
                                <input class="input" type="password" name="password" placeholder="Parola"
                                    autocomplete="current-password">
                                <span class="icon is-small left"><i class="mdi mdi-asterisk"></i></span>
                            </p>
                            <p class="help">
                                Te rog introdu parola
                            </p>
                        </div>
                        <hr>
                        <div class="field grouped">
                            <div class="control">
                                <button type="submit" class="button blue">
                                    Login
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
    <%- include('partials/footer.ejs') %>
</body>
<script>
    const error = new URLSearchParams(window.location.search).get('error');
    const success = new URLSearchParams(window.location.search).get('success');
    if(error != null && error != '') {
        Swal.fire({
            icon: 'error',
            title: 'Eroare',
            text: error
        });
        window.history.replaceState({}, document.title, "/login");
    }

    if(success != null && success != '') {
        Swal.fire({
            icon: 'success',
            title: 'Succes',
            text: success
        });
        window.history.replaceState({}, document.title, "/login");
    }
</script>
</html>
